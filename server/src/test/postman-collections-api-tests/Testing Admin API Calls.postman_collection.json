		{
			"name": "Login as ADMIN",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Login as admin', function(){\r",
							"    pm.response.to.have.status(200);\r",
							"})\r",
							"pm.test('Has a jwt', function(){\r",
							"    const data = pm.response.json();\r",
							"    pm.collectionVariables.set('jwt', data.jwt);\r",
							"    pm.collectionVariables.set('id', data.id);\r",
							"    return 'jwt' in data;\r",
							"})\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
